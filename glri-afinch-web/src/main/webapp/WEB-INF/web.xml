<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>glri-afinch</display-name>
    <servlet>
        <servlet-name>NetCDFServlet</servlet-name>
        <servlet-class>gov.usgs.cida.glri.afinch.NetCDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Export</servlet-name>
        <servlet-class>gov.usgs.cida.glri.afinch.Export</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NetCDFServlet</servlet-name>
        <url-pattern>/NetCDFServlet</url-pattern>
    </servlet-mapping>
    <!-- Geoserver Proxy -->
    <servlet>
        <servlet-name>GeoServerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
        <init-param>
            <param-name>forward-url-param</param-name>
            <param-value>afinch.endpoint.geoserver</param-value>
        </init-param>
        <init-param>
            <param-name>readTimeout</param-name>
            <param-value>300000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeoServerServlet</servlet-name>
        <url-pattern>/geoserver/*</url-pattern>
    </servlet-mapping>
    <!-- R-WPS Proxy -->
    <servlet>
        <servlet-name>wpsServerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
        <init-param>
            <param-name>forward-url-param</param-name>
            <param-value>afinch.endpoint.rwps</param-value>
        </init-param>
        <init-param>
            <param-name>readTimeout</param-name>
            <param-value>300000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>wpsServerServlet</servlet-name>
        <url-pattern>/rwps/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>threddsServerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
        <init-param>
            <param-name>forward-url-param</param-name>
            <param-value>afinch.endpoint.thredds</param-value>
        </init-param>
        <init-param>
            <param-name>readTimeout</param-name>
            <param-value>300000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>threddsServerServlet</servlet-name>
        <url-pattern>/thredds/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Export</servlet-name>
        <url-pattern>/export</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
